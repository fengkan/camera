<% content_for :title do %>
<%= "登入 - " + Settings.TAGLINE %>
<% end %>
<%content_for :head do%>
<%= javascript_include_tag "parsley.min","parsley-messages.zh_cn"%>
<script>
$(document).ready(function() {
  $('#form_login').parsley({ successClass: '', errorClass: 'indent-inputred' });
  $('#form_login').parsley( 'addListener', listeners);
});
</script>
<%end%>
<div class="padding-top68 indextbody">
  <div class="container">
    <div class="indent-warp login-warp">
      <% if !flash[:alert].blank? %>
      <div class="notification n_failure"><%= flash[:alert]%></div>
      <% end %>
      <div class="orderlist-top fn18">登入</div>
      <div class="col-lg-12">
        <%=render partial:"shared/login"%>
        <div class="divnlink"><a href="#">找回密码</a><a href="#"> 注册新账户</a></div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
var listeners={
  onFieldSuccess: function ( elem ) {
    $(elem).next().html('<img src="/images/numlist123-18.jpg"/>');
    return true;
  },
  onFieldError: function ( elem ) {
    $(elem).next().html('<img src="/images/numlist123-19.jpg"/>');
    return false;
  }
};
</script>
