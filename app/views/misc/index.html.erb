<script type="text/javascript">

// 百度地图API功能
var map = new BMap.Map("map-container");                        // 创建Map实例
  var Location=new BMap.Point(116.404,39.915);
  map.centerAndZoom(Location, 11);
map.addControl(new BMap.NavigationControl());               // 添加平移缩放控件
map.addControl(new BMap.ScaleControl());                    // 添加比例尺控件
map.addControl(new BMap.OverviewMapControl());              //添加缩略地图控件
map.enableScrollWheelZoom();                            //启用滚轮放大缩小
map.addControl(new BMap.MapTypeControl());          //添加地图类型控件
map.setCurrentCity("北京");          // 设置地图显示的城市 此项是必须设置的
  function DestinationMarker(){
  }
  DestinationMarker.prototype = new BMap.Overlay();
  DestinationMarker.prototype.initialize=function(map){
    this._map=map;
    var div = document.getElementById('marker');
    div.style.position='absolute';
    map.getPanes().markerMouseTarget.appendChild(div);
    this._div = div;
    return div;
  }
  DestinationMarker.prototype.draw = function(){
    // 根据地理坐标转换为像素坐标，并设置给容器
    var position = this._map.pointToOverlayPixel(Location);
    this._div.style.left = position.x+'px';
    this._div.style.top = position.y-23+'px';
  }
  var mySquare = new DestinationMarker();
  map.addOverlay(mySquare);
</script>