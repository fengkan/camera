<% content_for :title do %>
<%= "找回密码 - " + Settings.TAGLINE %>
<% end %>
<%content_for :head do%>
<%= javascript_include_tag "parsley.min","parsley-messages.zh_cn"%>
<script>
$(document).ready(function() {
  $('#new_user').parsley({ successClass: '', errorClass: 'indent-inputred' });
  $('#new_user').parsley( 'addListener', listeners);
});
</script>
<%end%>
<div class="padding-top68 indextbody">
  <div class="container">
    <div class="indent-warp login-warp">
      <% if !flash.now[:notice].blank? %>
      <div class="notification <%= flash[:notice_class] %>"><%= flash.now[:notice] %></div>
      <% end %>
      <div class="orderlist-top fn18">找回密码</div>
      <div class="col-lg-12">
        <form method="post" id="new_user" action="/accounts/forgetpwd" accept-charset="UTF-8">
          <div class="indent-inputin">
            <input type="email" class="indent-input" name="email" id="email"   placeholder="tale@mail.com" parsley-required="true" parsley-type="email" parsley-trigger="change" parsley-error-container="#login_email_validation" autofocus="autofocus"/>
            <span></span>
            <span id="login_email_validation"></span>
          </div>
          <div class="indent-inputin">
            <input class="btn btn-primary indent-btn" type="submit" value="发送邮件" name="commit">
          </div>
        </form>
        <div class="divnlink"><a href="/accounts/login">登入</a></div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
var listeners={
  onFieldSuccess: function ( elem ) {
    $(elem).next().html('<img src="/images/numlist123-18.jpg"/>');
    return true;
  },
  onFieldError: function ( elem ) {
    $(elem).next().html('<img src="/images/numlist123-19.jpg"/>');
    return false;
  }
};
</script>
