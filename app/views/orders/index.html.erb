<div class="padding-top68">
  <div class="container">
     <div class="indent-warp">
     <div class="orderlist-top fn18">订单列表</div>
     <div class="padding-top20 col-lg-12">
     <table width="100%" border="0" cellspacing="0" cellpadding="0" class="table table-bordered indent-price text-center">
  <tr>
    <th width="80px" class="text-center">模型</th>
    <th class="text-center">订单号</th>
   <th class="text-center">快递地址 </th>
   <th class="text-center" width="100px">状态</th>
   <th class="text-center">创建时间</th>
    <th class="text-center">快递号</th>
  </tr>
<% @orders.each do |order| %>
  <tr>
    <td><img src="/images/numlist123-20.jpg" /></td>
    <td><%= link_to order.id, order %></td>
    <td><%= order.shipment.address %></td>
      <td><% if order.status == 'new' %>
          <%= ('<span class="orderlist-state4"><a href="/orders/confirm/' + order.id.to_s + '">去付款</a></span><p class="margin-top5"><a href="#" style="color:#999;">取消订单</a></p>').html_safe %>
            
          <% else
    order_class=order.status_class
    order_status=order.readable_status
    %>
          	<span class="<%=order_class%>"><%=order_status%></span>
        	<% end %>
        </td>
    <td><%= beautify_time(order.created_at) %></td>
    <td><%= order.logistics %></td>
  </tr>
<% end %>
</table>
</div>
     </div>
  </div>
</div>